{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "baseUrl": "./src",
    "paths": {
      "@Auth/*": ["Auth/*"],
      "@Clients/*": ["Clients/*"],
      "@Invoices/*": ["Invoices/*"],
      "@Stripe/*": ["Stripe/*"],
      "@Users/*": ["Users/*"],
      "@Utils/*": ["Utils/*"],
      "@middleware/*": ["middleware/*"],
      "@AI/*": ["AI/*"],
      "@Analytics/*": ["Analytics/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

